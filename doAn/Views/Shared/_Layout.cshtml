        <div class="main-header">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 logo-holder">
                        <!-- ============================================================= LOGO ============================================================= -->
                        <div class="logo"> <a href="@Url.Action("Index","Home")"> <img src="~/AssetsPublic/images/logo.png" alt="logo"> </a> </div>
                        <!-- /.logo -->
                        <!-- ============================================================= LOGO : END ============================================================= -->
                    </div>
                    <!-- /.logo-holder -->

                    <div class="col-xs-12 col-sm-12 col-md-7 top-search-holder">
                        <!-- /.contact-row -->
                        <!-- ============================================================= SEARCH AREA ============================================================= -->
                        <div class="search-area">
                            <form>
                                <div class="control-group">
                                    <ul class="categories-filter animate-dropdown">
                                        <li class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown" href="@Url.Action("Index","Category")">Loại Hàng<b class="caret"></b></a>
                                            <ul class="dropdown-menu" role="menu">
                                                <li class="menu-header"></li>

                                                @foreach (LoaiSP m in Common.GetMaLoai())
                                                {
                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Index","Category", new { maloai = m.maLoai})">@m.tenLoai </a></li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                    <input class="search-field" placeholder="Search here...">
                                    <a class="search-button" href="#"></a>
                                </div>
                            </form>
                        </div>
                        <!-- /.search-area -->
                        <!-- ============================================================= SEARCH AREA : END ============================================================= -->
                    </div>
                    <!-- /.top-search-holder -->

                    <div class="col-xs-12 col-sm-12 col-md-2 animate-dropdown top-cart-row">
                        <!-- ============================================================= SHOPPING CART DROPDOWN ============================================================= -->

                        <div class=" dropdown-cart">
                            <a href="@Url.Action("Index","Cart")" class="lnk-cart" data-toggle="">
                                <div class="items-cart-inner">
                                    <div class="basket"> <i class="glyphicon glyphicon-shopping-cart"></i> </div>
                                    <div class="total-price-basket"> <span class="lbl">giỏ hàng</span> <span class="total-price"> </span> </div>
                                </div>
                            </a>
                           
                            <!-- /.dropdown-menu-->
                        </div>
                        <!-- /.dropdown-cart -->
                        <!-- ============================================================= SHOPPING CART DROPDOWN : END============================================================= -->
                    </div>
                    <!-- /.top-cart-row -->
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->

        </div>
        <!-- /.main-header -->
        <!-- ============================================== NAVBAR ============================================== -->
        <div class="header-nav animate-dropdown">
            <div class="container">
                <div class="yamm navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button data-target="#mc-horizontal-menu-collapse" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="nav-bg-class">
                        <div class="navbar-collapse collapse" id="mc-horizontal-menu-collapse">
                            <div class="nav-outer">
                                <ul class="nav navbar-nav">
                                    <li class="active dropdown yamm-fw"> <a href="@Url.Action("Index","Home")" >Trang chủ</a> </li>
                                    <li class="dropdown yamm mega-menu">
                                        <a href="@Url.Action("Index","Home")" data-hover="dropdown" class="dropdown-toggle" data-toggle="dropdown">Trang phục<span class="menu-label new-menu hidden-xs">new</span></a>
                                        <ul class="dropdown-menu container">
                                            <li>
                                                <div class="yamm-content ">
                                                    <div class="row">
                                                        @{
                                                                int n = 1;
                                                                foreach (LoaiSP i in Common.GetMaLoai())
                                                                {
                                                                <div class="col-xs-12 col-sm-6 col-md-4 col-menu">
                                                                    <h2 class="title">@i.gioiTinh</h2>
                                                                    <ul class="links">
                                                                        @{
                                                                            foreach (LoaiSP j in Common.getLoaiSPByGioiTinh(i.gioiTinh))
                                                                            {
                                                                                <li><a href="@Url.Action("Index","Category", new {maloai = j.maLoai})">@j.tenLoai</a></li>
                                                                            }
                                                                        }


                                                                    </ul>
                                                                </div>
                                                                <!-- /.col -->
                                                                if(n++ >= 2)
                                                                {
                                                                    break;
                                                                }
                                                            }
                                                        }






                                                        <div class="col-xs-12 col-sm-6 col-md-4 col-menu banner-image"> <img class="img-responsive" src="~/AssetsPublic/images/banners/menu-banner.png" alt=""> </div>
                                                        <!-- /.yamm-content -->
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class=" mega-menu">
                                        <a href="@Url.Action("Index","Contact")" data-hover="dropdown" class="" data-toggle="">LIÊN HỆ <span class="menu-label hot-menu hidden-xs">GO</span> </a>
                           
                                    </li>
                                    <li class="dropdown hidden-sm"> <a href="@Url.Action("Index","Blog")"> Bài viết <span class="menu-label hot-menu hidden-xs">9+</span> </a> </li>
                                   
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">Pages</a>
                                        <ul class="dropdown-menu pages">
                                            <li>
                                                <div class="yamm-content">
                                                    <div class="row">
                                                        <div class="col-xs-12 col-menu">
                                                            <ul class="links">
                                                                <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                                                                <li><a href="@Url.Action("Index","Cart")">Giỏ hàng</a></li>
                                                                <li><a href="@Url.Action("Index","Checkout")">Thanh toán</a></li>
                                                                <li><a href="@Url.Action("Index","Blog")">Bài viết</a></li>
                                                                <li><a href="@Url.Action("Index","Contact")">Liên hệ</a></li>
                                                                <li><a href="@Url.Action("Index","SignIn")">Đăng nhập</a></li>
                                                                <li><a href="@Url.Action("Index","WishList")">Danh sách yêu thích</a></li>
                                                                <li><a href="@Url.Action("Index","Track")">Đơn hàng đã xem</a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="dropdown  navbar-right special-menu"> <a href="#">Todays offer</a> </li>
                                </ul>
                                <!-- /.navbar-nav -->
                                <div class="clearfix"></div>
                            </div>
                            <!-- /.nav-outer -->
                        </div>
                        <!-- /.navbar-collapse -->

                    </div>
                    <!-- /.nav-bg-class -->
                </div>
                <!-- /.navbar-default -->
            </div>
            <!-- /.container-class -->

        </div>
        <!-- /.header-nav -->
        <!-- ============================================== NAVBAR : END ============================================== -->

    </header>

    <!-- ============================================== HEADER : END ============================================== -->

